<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActividadC.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="lblContador"
               Text="Presiona el botón"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

            <Button Text="Presionar"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                Clicked="OnButtonClicked"/>

            <Button Text="Cambiarr Color"
            Clicked="OnChangeColorButtonClicked"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"/>

            <Button Text="Abrir YouTube"
                    Clicked="OnOpenWebsiteButtonClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"/>
            <Button Text="Precioname" 
                Clicked="OnNewButtonClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
